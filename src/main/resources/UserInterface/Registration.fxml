                                <Insets left="120.0" />
                            </VBox.margin>
                        </ImageView>
                    </children>
                    <VBox.margin>
                        <Insets left="30.0" right="30.0" />
                    </VBox.margin>


                </VBox>
            </children>
            <!-- Appliquer un style pour le fond du VBox -->
