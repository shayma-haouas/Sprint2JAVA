                <Insets right="50.0" />
            </padding>
        </VBox>
        <HBox layoutX="423.0" layoutY="-4.0" prefHeight="333.0" prefWidth="581.0">
            <style>
                /* Dégradé de couleur pour le fond du VBox */
                -fx-background-color: linear-gradient(to bottom, rgba(136, 180, 78, 0.7), rgba(136, 180, 78, 1.0));
            </style>
            <children>
                <ImageView fitHeight="192.0" fitWidth="172.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../img/logo.png" />
                    </image>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </ImageView>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>

                        <!-- Header -->
                        <Text fill="#262f2d" strokeType="OUTSIDE" strokeWidth="0.0" text="Let's Go " textAlignment="CENTER">
                            <font>
                                <Font size="34.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="50.0" />
                            </VBox.margin>
                        </Text>
                        <Text fill="#f8f6f6" lineSpacing="20.0" strokeType="OUTSIDE" strokeWidth="0.0" text="To Create A Count">
                            <VBox.margin>
                                <Insets right="50.0" />
                            </VBox.margin>
                            <font>
                                <Font size="30.0" />
                            </font>
                        </Text>
                    </children>

                </VBox>
            </children>
        </HBox>
        <VBox layoutX="424.0" layoutY="130.0" prefHeight="570.0" prefWidth="579.0">
            <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                      <TextField fx:id="captchaField" promptText="Enter Captcha" />
                      <WebView fx:id="captchaWebView" prefHeight="100.0" prefWidth="201.0" />
               </children>
            </HBox>

                <!-- Button -->
                <Button mnemonicParsing="false" onAction="#Registratinclicked" prefHeight="35.0" prefWidth="176.0" text="Register">
                    <VBox.margin>
